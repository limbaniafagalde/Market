@model IEnumerable<Market.ViewModels.UserView> 
@{
    ViewBag.Title = "Index";
}

<h2>Premisions Manager</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) //recorra x cada item en el modelo (una lista de userView)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Roles", "Roles", new { userID = item.UserID }) <!--// cod del usuario q quiero editar-->
            </td>
        </tr>
    }

</table>
