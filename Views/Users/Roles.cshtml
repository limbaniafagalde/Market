@model Market.ViewModels.UserView

@{
    ViewBag.Title = "Roles";
}

<h2>Roles for user: @Model.Name</h2>

<p>
    @Html.ActionLink("Add Role", "AddRole", new { userID = Model.UserID}, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info" })
</p>
<table class="table">
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
  <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>
      <td>

          @Html.ActionLink("Delete", "Delete", new { userID = Model.UserID, roleID = Model.Roles[i].RoleID }, new { @class = "btn btn-danger" })
      </td>
  </tr>
    }

</table>
